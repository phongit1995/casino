                    //-         .message
                    //-         | This is a test message... asdsajd asdasjdasjdoaspjasopdsaopdjas poasjopasjdopasjdoas jdsaop das
                .chat-body
                    input.chat-input.form-control(type='text' placeholder='Type a message..')
                    button.chat-btn.btn.btn-primary(type='button')
                        i.fas.fa-paper-plane
            #chatInt.chatInt(style="opacity: 0")
