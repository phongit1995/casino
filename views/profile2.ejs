<!DOCTYPE html>
<html lang="en">
   <head>
      <%-include('common/header.ejs')%>
   </head>
   <body>
      <%-include('common/nav.ejs')%>
      <div class="jumbotron">
         <h3><i class="far fa-user"></i>&nbsp;Profile</h3>
         <div class="profile">
            <div class="avatar"></div>
            <div class="info">
               <div class="name">Username</div>
               <div class="registered">Registered on</div>
               <div class="uuid">UUID: xxxx-xxxx-xxxx-xxxx</div>
            </div>
         </div>
         <div class="pstatistics">
            <div class="box">
               <div class="type"><i class="fas fa-gamepad blue"></i>&nbsp;TOTAL BETS</div>
               <div class="amount rbets">0</div>
            </div>
            <div class="box">
               <div class="type"><i class="fas fa-coins gold"></i>&nbsp;TOTAL DEPOSITED</div>
               <div class="amount deposited">0</div>
            </div>
            <div class="box">
               <div class="type"><i class="fas fa-coins gold"></i>&nbsp;TOTAL WITHDRAWN</div>
               <div class="amount withdrawn">0</div>
            </div>
            <div class="box">
               <div class="type"><i class="fas fa-coins gold"></i>&nbsp;WAGERED</div>
               <div class="amount wagered">0</div>
            </div>
         </div>
         <div class="ptransactions">
            <h4><i class="fas fa-scroll"></i>&nbsp;Transactions</h4>
            <table class="table table-hover">
               <thead>
                  <tr>
                     <th scope="col">Type</th>
                     <th scope="col">Amount</th>
                     <th scope="col">TXID</th>
                     <th scope="col">Timestamp</th>
                     <th scope="col">Status</th>
                  </tr>
               </thead>
               <tbody class="pTransactions"></tbody>
            </table>
         </div>
      </div>
      <%-include('common/modals.ejs')%>
   </body>
</html>